doctype html
html(ng-modules="index.crud,node.crud")
    head
        include partials/head.jade
        link(rel="stylesheet" href="./css/style-twoside.css")

    body.index.loading(ng-controller="node.crud",crud-config='{"type":"post"}',crud-params='{"limit":"5"}',crud-search-fields="['category.id']")
        include partials/sidebar.jade

        .right-side
            div(ng-init="crud.query()")
                include partials/post.jade

            div(style="text-align:center;margin-bottom:10px" ng-show="crud.pagination.display.length>1")
                .row
                    .col-xs-12
                        ul.pagination
                            li(ng-repeat="page in crud.pagination.display")
                                a(ng-click="crud.goto(page)",ng-class="{active:page==crud.pagination.index}") {{page+1}}


        include partials/scripts.jade
        include partials/preload-string
        script(src="./system/node/crud.js")
        script(src="./system/index/crud.js")
